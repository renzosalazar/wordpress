	if ( ! is_admin() ) {&#13;
		global $woocommerce;&#13;
		if ( current_user_can('wholesaler') || current_user_can('distributor') ) {&#13;
			$woocommerce-&gt;customer-&gt;set_is_vat_exempt(true);&#13;
		} else {&#13;
			$woocommerce-&gt;customer-&gt;set_is_vat_exempt(false);&#13;
		}&#13;
	}&#13;
}</code>
